<UserControl x:Class="RealtorsFirm_3cursEO.UserControls.TextBoxes.DateTimeControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RealtorsFirm_3cursEO.UserControls.TextBoxes"
             
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes">
    <Grid>
        <TextBox Tag="дд.мм.гггг чч.мм"
                 x:Name="dateTextBox"
                 Style="{StaticResource ActionTextBox}"
                 PreviewKeyDown="dateTextBox_PreviewKeyDown"
                 TextChanged="dateTextBox_TextChanged"
                 PreviewTextInput="dateTextBox_PreviewTextInput"
                 MaxLength="16"/>

        <materialDesign:PackIcon 
            Kind="Calendar"
            Style="{StaticResource ActionIcon}"/>
    </Grid>
</UserControl>
