<UserControl x:Class="RealtorsFirm_3cursEO.UserControls.TextBoxes.PassportTBUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RealtorsFirm_3cursEO.UserControls.TextBoxes"
            
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes">
    <Grid>
        <TextBox 
            Tag="0000 000000"
            MaxLength="11"
            x:Name="passportTextBox"
            Style="{StaticResource ActionTextBox}"
            PreviewTextInput="PassportTextBox_PreviewTextInput"
            TextChanged="PassportTextBox_TextChanged"
            PreviewKeyDown="PassportTextBox_PreviewKeyDown"
            DataObject.Pasting="PassportTextBox_Pasting"/>

        <materialDesign:PackIcon 
            Kind="Passport" 
            Style="{StaticResource ActionIcon}"/>
    </Grid>
</UserControl>
