<UserControl x:Class="RealtorsFirm_3cursEO.UserControls.TextBoxes.PhoneTBUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RealtorsFirm_3cursEO.UserControls.TextBoxes"
            
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes">
    <Grid>
        <TextBox 
            Tag="8 000 111 11 11"
            MaxLength="15"
            x:Name="phoneTextBox"
            Style="{StaticResource ActionTextBox}"
            GotFocus="PhoneTextBox_GotFocus"
            LostFocus="PhoneTextBox_LostFocus"
            PreviewTextInput="PhoneTextBox_PreviewTextInput"
            TextChanged="PhoneTextBox_TextChanged"
            PreviewKeyDown="PhoneTextBox_PreviewKeyDown"
            DataObject.Pasting="phoneTextBox_Pasting"/>

        <materialDesign:PackIcon 
            Kind="phone" 
            Style="{StaticResource ActionIcon}"/>
    </Grid>
</UserControl>
