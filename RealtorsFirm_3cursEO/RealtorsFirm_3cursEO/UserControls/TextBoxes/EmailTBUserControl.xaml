<UserControl x:Class="RealtorsFirm_3cursEO.UserControls.TextBoxes.EmailTBUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RealtorsFirm_3cursEO.UserControls.TextBoxes"
             mc:Ignorable="d" 
             
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes">
    <Grid>
        <TextBox 
            Tag="user@example.com"
            MaxLength="30"
            x:Name="phoneTextBox"
            Style="{StaticResource ActionTextBox}"
            PreviewTextInput="PhoneTextBox_PreviewTextInput"
            DataObject.Pasting="phoneTextBox_Pasting"/>

        <materialDesign:PackIcon 
            Kind="email" 
            Style="{StaticResource ActionIcon}"/>
    </Grid>
</UserControl>
